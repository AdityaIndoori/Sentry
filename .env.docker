# Claude Sentry Configuration (Docker)

# LLM Provider: "anthropic" or "bedrock_gateway"
LLM_PROVIDER=bedrock_gateway

# Anthropic API (used when LLM_PROVIDER=anthropic)
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_MODEL=claude-opus-4-20250514
ANTHROPIC_MAX_TOKENS=16384

# AWS Bedrock Access Gateway (used when LLM_PROVIDER=bedrock_gateway)
BEDROCK_GATEWAY_API_KEY=clinevscodeopenapi
BEDROCK_GATEWAY_BASE_URL=http://Bedroc-Proxy-fYTbaje6iyYG-268555913.us-west-2.elb.amazonaws.com/api/v1
BEDROCK_GATEWAY_MODEL=global.anthropic.claude-opus-4-6-v1
BEDROCK_GATEWAY_MAX_TOKENS=128000

# Security - AUDIT mode means active tools log but don't execute
SENTRY_MODE=AUDIT
PROJECT_ROOT=/app/watched
STOP_FILE_PATH=/app/STOP_SENTRY
MAX_COST_10MIN=5.00
MAX_RETRIES=3
RESTART_COOLDOWN=600

# Watcher - watch the container watched/ directory
WATCH_PATHS=/app/watched/*.log
POLL_INTERVAL=5

# Memory
MEMORY_FILE_PATH=/app/data/sentry_memory.json

# Logging
LOG_LEVEL=INFO
ENVIRONMENT=docker
